{
  "name": "goarborpro",
  "version": "1.0.0",
  "private": true,
  "description": "Go Arbor Pro static site + frontend build tools",
  "scripts": {
    "build:css": "npx tailwindcss -i ./styles.css -o ./dist/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./styles.css -o ./dist/styles.css --watch",
    "backend:dev": "cd backend && npm run dev",
    "dev": "concurrently \"npm:watch:css\" \"npm:backend:dev\"",
    "start": "node backend/src/index.js"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.26",
    "tailwindcss": "^3.4.6"
  }
}
